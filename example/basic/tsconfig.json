  "compilerOptions": {
    "moduleResolution": "Node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "module": "ES2020"
  }
}