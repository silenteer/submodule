{
  "name": "@incompleto/trpc",
  "module": "src/index.ts",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "peerDependencies": {
    "@submodule/core": "^6",
    "@trpc/server": "^10",
    "typescript": "^5"
  },
  "devDependencies": {
    "@submodule/core": "workspace:*"
  },
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "minify": false,
    "format": [
      "esm",
      "cjs"
    ],
    "treeshake": false,
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "dts": true
  },
  "scripts": {
    "build": "bunx tsup",
    "dev": "bunx tsup --watch",
    "clean": "bunx rimraf dist"
  }
}