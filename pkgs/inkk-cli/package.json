{
  "name": "inkk",
  "version": "1.0.0",
  "description": "copy and and paste made easy",
  "bin": {
    "inkk": "bin"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/submodule-js/submodule.git",
    "directory": "pkgs/inkk-cli"
  },
  "files": [
    "dist/**",
    "bin",
    "package.json",
    "README.md",
    "CHANGELOG.md"
  ],
  "license": "MIT",
  "homepage": "https://inkk.js.org",
  "dependencies": {
    "@types/degit": "^2.8.6",
    "@types/git-url-parse": "^9.0.3",
    "@types/parse-package-name": "^0.1.3",
    "@types/validate-npm-package-name": "^4.0.2"
  },
  "devDependencies": {
    "@antfu/ni": "^0.23.0",
    "@submodule/core": "workspace:*",
    "commander": "^12.1.0",
    "debug": "^4.3.7",
    "execa": "^9.4.0",
    "ora": "^8.1.0",
    "parse-package-name": "^1.0.0",
    "resolve-package-path": "^4.0.3",
    "validate-npm-package-name": "^6.0.0",
    "zod": "^3.23.8"
