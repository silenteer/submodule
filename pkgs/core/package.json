{
  "name": "@submodule/cli",
  "version": "2.9.0",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@opentelemetry/api": ">=1.0.0 <1.4.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.34.0",
    "@opentelemetry/resource-detector-docker": "^0.1.2",
    "@opentelemetry/resources": "^1.8.0",
    "@opentelemetry/sdk-trace-base": "^1.8.0",
    "@opentelemetry/sdk-trace-node": "^1.8.0",
    "@opentelemetry/semantic-conventions": "^1.8.0",
    "chokidar": "^3.5.3",
    "commander": "^9.4.1",
    "debug": "^4.3.4",
    "esbuild": "^0.16.13",
    "esbuild-register": "^3.4.2",
    "glob": "^8.1.0",
    "ts-toolbelt": "^9.6.0",
    "tsup": "^6.7.0",
    "typescript": "^4.9.5",
    "zod": "^3.20.2"
  },
  "scripts": {
    "dev": "yarn run -T tsup --watch",
    "core:dev": "yarn dev",
    "test": "vitest run",
    "core:test": "yarn test",
    "build": "yarn run -T tsup",
    "core:build": "yarn build",
    "preview": "yarn run -T standard-version --path . --dry-run",
    "core:preview": "yarn preview",
    "bump": "yarn run -T standard-version --path .",
    "core:bump": "yarn bump",
    "release": "git push --follow-tags origin main && npm publish --access public",
    "core:release": "yarn release"
  },
  "bin": {
    "submodule": "dist/commands.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/commands.ts",
      "src/core.ts"
    ],
    "minify": false,
    "treeshake": false,
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "dts": true
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/glob": "^8.1.0",
    "@types/node": "^18.11.18",
    "vitest": "^0.29.7"
  }
}
