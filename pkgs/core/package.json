{
  "name": "@submodule/core",
  "version": "6.0.0-rc.0",
  "description": "Structural way to build node and deno application",
  "author": "Lagz0ne <duke@silentium.io>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/submodule-js/submodule.git",
    "directory": "pkgs/core"
  },
  "keywords": [
    "ioc",
    "configuration",
    "structure",
    "composition",
    "reusable",
    "foundation",
    "submodule"
  ],
  "license": "MIT",
  "homepage": "https://submodule.js.org",
  "scripts": {
    "dev": "tsup --watch",
    "test": "wireit",
    "build": "wireit",
    "preview": "wireit",
    "bump": "wireit",
    "release": "git push --follow-tags origin main && npm publish --access public"
  },
  "wireit": {
    "bump": {
      "command": "yarn run -T standard-version --path . -t @submodule/core",
      "dependencies": [
        "build"
      ]
    },
    "preview": {
      "command": "yarn run -T standard-version --path . --dry-run -t @submodule/core"
    },
    "build": {
      "command": "tsup",
      "dependencies": [
        "test"
      ],
      "files": [
        "src/**",
        "tsconfig.json"
      ],
      "output": [
        "dist/**"
      ]
    },
    "test": {
      "command": "vitest run",
      "files": [
        "src/**",
        "tsconfig.json",
        "tests/**"
      ],
      "output": []
    }
  },
  "exports": "./src/index.ts",
  "publishConfig": {
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "import": "./dist/index.js",
        "require": "./dist/index.cjs",
        "types": "./dist/index.d.ts"
      }
    }
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "minify": false,
    "treeshake": false,
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "dts": true
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.3",
    "@types/debug": "^4.1.7",
    "@types/node": "^18.11.18",
    "@vitest/ui": "^1.6.0",
    "dprint": "^0.42.5",
    "esbuild": "^0.21.4",
    "release-please": "^16.0.0",
    "tsup": "^8.1.0",
    "typescript": "^4.9.5",
    "vite": "^5.2.12",
    "vitest": "^1.6.0",
    "wireit": "^0.14.1"
  }
}
